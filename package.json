{
    "name": "elysia-boilerplate",
    "module": "src/main.ts",
    "type": "module",
    "scripts": {
        "start": "bun run src/main.ts",
        "dev": "bun run --watch src/main.ts",
        "format": "biome format --write ./src",
        "format:check": "biome format ./src",
        "lint": "biome check --apply ./src",
        "lint:unsafe": "biome check --apply-unsafe ./src",
        "lint:check": "biome check ./src",
        "test": "bun test"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.8.1",
        "@types/bun": "latest",
        "lefthook": "^1.6.15"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@t3-oss/env-core": "^0.10.1",
        "elysia": "^1.0.23",
        "zod": "^3.23.8"
    }
}
